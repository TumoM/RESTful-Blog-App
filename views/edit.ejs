<%- include("partials/header") %>

    <div class="ui main text container segment">
        <div class="ui huge header">Edit Blog</div>
        <form class="ui form" action="/blogs/<%=blog["_id"]%>?_method=PUT" method="POST">
            <div class="field">
                <label >Title</label>
                <input type="text" name="blog[title]" id="title" placeholder="Title" value="<%=blog["title"]%>">
            </div>
            <div class="field">
                <label >Image</label>
                <input type="text" name="blog[image]" id="image" placeholder="Image" value="<%=blog["image"]%>">
            </div>
            <div class="field">
                <label >Blog Content</label>
                <textarea required name="blog[body]" id="" cols="30" rows="10" ><%=blog["body"]%></textarea>
                <!-- <input type="text" name="blog[body]" id="body" placeholder="Blog post goes here."> -->
            </div>
            <input class="ui violet basic button big" type="submit">
        </form>
    </div>

<%- include("partials/footer") %>